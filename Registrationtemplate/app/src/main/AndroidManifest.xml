<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".generalData.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LightTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:screenOrientation="portrait"
            android:name=".regPart.LogInActivity"
            android:exported="false"
            android:label="@string/log_in"
            android:theme="@style/Theme.LightTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".regPart.RegistrationActivity"
            android:exported="false"
            android:theme="@style/Theme.LightTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".regPart.CodeConfirmActivity"
            android:exported="false"
            android:theme="@style/Theme.LightTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".regPart.NewPassActivity"
            android:exported="false"
            android:theme="@style/Theme.LightTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".regPart.PasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.LightTheme"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".regPart.AuthorizationActivity"
            android:exported="true"
            android:theme="@style/Theme.LightTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".regPart.MainAppActivity"
            android:exported="false"
            android:theme="@style/Theme.LightTheme" />
    </application>
</manifest>