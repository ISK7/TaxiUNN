<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/back_component_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/reg_back_but"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/angle_left"
            android:paddingEnd="370dp"
            android:text="@string/back"
            android:textAppearance="@style/CustomTextButtonBack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            style="@style/CustomTextButtonBack"
            android:paddingTop="12dp"
            android:paddingStart="35dp"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/reg_text_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomTextHeader"
        android:text="@string/registration"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/back_component_r"
        android:layout_marginTop="12dp"/>
    <ScrollView
        android:id="@+id/scroll_content_view_r"
        android:layout_below="@id/reg_text_r"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/reg_but_r"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/name_text_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextNormalBlack"
                android:text="@string/name"
                android:textAlignment="textStart"
                android:layout_marginTop="22dp"
                />
            <EditText
                android:id="@+id/name_view_r"
                android:layout_width="335dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:hint="@string/name_example"
                android:autofillHints="emailAddress"
                android:inputType="text"
                android:paddingStart="8dp"
                android:background="@drawable/custom_edit_gray"
                android:layout_below="@id/name_text_r"
                />
            <TextView
                android:id="@+id/name_error_r"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@id/login_view_r"
                android:layout_below="@id/name_view_r"
                style="@style/CustomTextNormalRed"
                android:text=""
                />
            <TextView
                android:id="@+id/login_text_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextNormalBlack"
                android:text="@string/enter_e_mail"
                android:textAlignment="textStart"
                android:layout_marginTop="22dp"
                android:layout_alignStart="@id/login_view_r"
                android:layout_below="@id/name_view_r"
                />
            <EditText
                android:id="@+id/login_view_r"
                android:layout_width="335dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:hint="@string/login"
                android:autofillHints="emailAddress"
                android:inputType="text"
                android:paddingStart="8dp"
                android:background="@drawable/custom_edit_gray"
                android:layout_below="@id/login_text_r"
                />
            <TextView
                android:id="@+id/log_in_error_r"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@id/login_view_r"
                android:layout_below="@id/login_view_r"
                style="@style/CustomTextNormalRed"
                android:text=""
                />
            <TextView
                android:id="@+id/password_enter_text_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextNormalBlack"
                android:text="@string/enter_password"
                android:textAlignment="textStart"
                android:layout_marginTop="22dp"
                android:layout_below="@id/login_view_r"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_view_component_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/password_enter_text_r"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_enter_r"
                    android:layout_width="335dp"
                    android:layout_height="45dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:background="@drawable/custom_edit_gray"
                    android:paddingStart="8dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/password_first_error_r"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@id/password_view_component_r"
                android:layout_below="@id/password_view_component_r"
                style="@style/CustomTextNormalRed"
                android:text=""
                />
            <TextView
                android:id="@+id/password_confirm_text_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextNormalBlack"
                android:text="@string/enter_password"
                android:textAlignment="textStart"
                android:layout_marginTop="22dp"
                android:layout_below="@id/password_view_component_r"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_confirm_component_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/password_confirm_text_r"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_confirm_r"
                    android:layout_width="335dp"
                    android:layout_height="45dp"
                    android:hint="@string/second_password"
                    android:inputType="textPassword"
                    android:background="@drawable/custom_edit_gray"
                    android:paddingStart="8dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/password_second_error_r"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@id/password_confirm_component_r"
                android:layout_below="@id/password_confirm_component_r"
                style="@style/CustomTextNormalRed"
                android:text=""
                />
            <LinearLayout
                android:id="@+id/politics_component_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/password_confirm_component_r"
                >
                <CheckBox
                    android:id="@+id/politics_check_box_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:buttonTint="@drawable/custom_checkbox_gray"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_are_agree"
                    style="@style/CustomTextSmallGrey"
                    android:textColorLink="@color/blue_primary"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/reg_but_r"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_but_blue_inactive"
        android:enabled="false"
        android:textAppearance="@style/CustomTextButtonWhite"
        android:text="@string/create_account"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/reg_to_log_component"
        />

    <LinearLayout
        android:id="@+id/reg_to_log_component"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/CustomTextNormalGray"
            android:text="@string/already_created"
            />
        <TextView
            android:id="@+id/reg_to_log_but"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            style="@style/CustomTextNormalGray"
            android:text="@string/log_in"
            android:textColor="@color/blue_primary"
            />
    </LinearLayout>
</RelativeLayout>